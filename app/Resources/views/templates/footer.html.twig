<script>
    $(function(){
        // bind change event to select
        $('.categories').on('change', function () {
            var chemin;
            var url = $(this).val(); // get selected value
            if (url) { // require a URL
                var chemin ='/category/' + url;
                window.location = chemin; // redirect
            }
            return false;
        });
    });
</script>